<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openclover</groupId>
        <artifactId>clover-base-pom</artifactId>
        <version>4.6.0-SNAPSHOT</version>
    </parent>
    <artifactId>clover-idea-libs</artifactId>
    <version>141.3058.30</version> <!-- major.minor.build (14.1.7 build IC-141.3058.30) -->
    <packaging>pom</packaging>
    <description>
        This module contains a subset of IntelliJ IDEA's JAR files required to compile Clover-for-IDEA
        integration against given IDEA version. They are used only for classpath and shall *not* be bundled
        into Clover-for-IDEA. These JAR files were taken from an IntellJ IDEA distribution.
    </description>
    <licenses>
        <license>
            <name>JetBrains (Commercial License)</name>
            <url>https://www.jetbrains.com/idea/buy/license.html</url>
        </license>
    </licenses>
    <name>IDEA Libraries for Clover</name>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.openclover.idea.libs</groupId>
                    <artifactId>idea</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.openclover.idea.libs</groupId>
                    <artifactId>others</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.openclover.idea.plugins</groupId>
                    <artifactId>devkit</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.openclover.idea.libs</groupId>
                    <artifactId>bin</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.openclover.idea.libs</groupId>
                    <artifactId>boot</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>workspace-setup</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <!-- download -->
                                        <echo message="Downloading IDEA ..."/>
                                        <mkdir dir="${project.build.directory}/download"/>
                                        <get src="${idea.download.site}/${idea.download.path}/${idea.download.file}"
                                             dest="${project.build.directory}/download/${idea.download.file}"
                                             skipexisting="true"/>

                                        <!-- extract -->
                                        <echo message="Unpacking IDEA archive ..."/>
                                        <mkdir dir="${project.build.directory}/extract"/>
                                        <untar src="${project.build.directory}/download/${idea.download.file}"
                                               dest="${project.build.directory}/extract"
                                               compression="gzip"/>

                                        <!-- note: jar with zipfileset is slow, thus unpacking+packing separately -->
                                        <echo message="Unpacking JARs from lib ..."/>
                                        <unjar dest="${project.build.directory}/merge/idea-lib">
                                            <fileset dir="${project.build.directory}/extract/${idea.download.dir}/lib"
                                                     includes="**/*.jar"
                                                     excludes="idea.jar,boot.jar"/>
                                            <!-- idea.jar is large so keep it separately; boot.jar is needed on Xbootclasspath -->
                                        </unjar>

                                        <!-- merge jars into one -->
                                        <echo message="Packing classes into new JARs ..."/>
                                        <jar destfile="${project.build.directory}/merge/idea-bin.jar"
                                             basedir="${project.build.directory}/extract/${idea.download.dir}/bin"
                                             level="0"/>

                                        <jar destfile="${project.build.directory}/merge/idea-lib.jar"
                                             basedir="${project.build.directory}/merge/idea-lib"
                                             excludes="META-INF/MANIFEST.MF,META-INF/INDEX.LIST,META-INF/*.SF,META-INF/*.DSA,META-INF/*.RSA"
                                             level="0">
                                        </jar>

                                        <jar destfile="${project.build.directory}/merge/idea-plugins-devkit.jar">
                                            <zipfileset src="${project.build.directory}/extract/${idea.download.dir}/plugins/devkit/lib/devkit.jar"/>
                                            <zipfileset src="${project.build.directory}/extract/${idea.download.dir}/plugins/devkit/lib/devkit-jps-plugin.jar"/>
                                        </jar>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>3.0.1</version>
                        <executions>
                            <execution>
                                <id>install-idea-lib-boot</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/extract/${idea.download.dir}/lib/boot.jar</file>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>boot</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-idea-lib-idea</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/extract/${idea.download.dir}/lib/idea.jar</file>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>idea</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-idea-lib</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/merge/idea-lib.jar</file>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>others</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-idea-plugins-devkit</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/merge/idea-plugins-devkit.jar</file>
                                    <groupId>org.openclover.idea.plugins</groupId>
                                    <artifactId>devkit</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-idea-bin</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/merge/idea-bin.jar</file>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>bin</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>jar</packaging>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <properties>
        <idea.download.site>https://download.jetbrains.com</idea.download.site>
        <idea.download.path>idea</idea.download.path>
        <idea.download.file>ideaIC-14.1.7.tar.gz</idea.download.file>
        <idea.download.dir>idea-IC-141.3058.30</idea.download.dir>
    </properties>
</project>
