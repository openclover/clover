			<reference ref="CloverPlugin.Scope.ShowAllClasses"/>
			<reference ref="CloverPlugin.Scope.ShowApplicationClassesOnly"/>
			<reference ref="CloverPlugin.Scope.ShowTestClassesOnly"/>
