			<action class="com.atlassian.clover.idea.actions.cloudreport.IncludeSubpackagesAction"
			        text="Include subpackages" id="CloverPlugin.CloudReportIncludeSubpkgs"/>
		</group>

    </actions>

</idea-plugin>
