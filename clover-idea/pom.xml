<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openclover</groupId>
        <artifactId>clover-base-pom</artifactId>
        <version>4.5.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>clover-idea</artifactId>
    <name>OpenClover IntelliJ IDEA Plugin</name>
    <description>
        OpenClover IntelliJ IDEA Plugin is a free and open-source code coverage tool based on the
        open-sourced Atlassian Clover(R).
    </description>
    <dependencies>
        <dependency>
            <groupId>org.openclover</groupId>
            <artifactId>clover</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- repacked third party libraries -->
        <dependency>
            <groupId>org.openclover</groupId>
            <artifactId>clover-jtreemap</artifactId>
            <version>1.1.0</version>
        </dependency>
        <!-- Minimal set of IntelliJ IDEA dependencies, for compilation -->
        <dependency>
            <groupId>org.openclover</groupId>
            <artifactId>clover-idea-libs</artifactId>
            <version>${idea.version}</version>
            <type>pom</type>
        </dependency>
        <!-- test dependencies -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>etc</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/resources-filtered</directory>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}/generated-sources</targetPath>
                <excludes>
                    <exclude>autoupdate/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources-filtered</directory>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}</targetPath>
                <includes>
                    <include>autoupdate/**</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <!-- add target/generated-sources folder -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-generated-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- configure tests to run with IntelliJ IDEA runtime -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-intellij-bin</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/idea/bin</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>bin</artifactId>
                                    <version>${idea.version}</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-intellij-boot-and-idea-jars</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/idea/lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>boot</artifactId>
                                    <version>${idea.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>idea</artifactId>
                                    <version>${idea.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.openclover.idea.libs</groupId>
                                    <artifactId>others</artifactId>
                                    <version>${idea.version}</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <additionalClasspathElements>
                        <additionalClasspathElement>${project.build.directory}/idea/bin</additionalClasspathElement>
                    </additionalClasspathElements>
                    <argLine>
                        -Djava.library.path=${project.build.directory}/idea/bin
                        -Xbootclasspath/a:${project.build.directory}/idea/lib/boot-${idea.version}.jar
                        -Xmx512M
                        -ea
                        <!-- -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005-->
                    </argLine>
                    <skip>true</skip> <!-- TODO remove once tests are fixed -->
                    <systemProperties>
                        <java.awt.headless>true</java.awt.headless>
                        <java.compiler>NONE</java.compiler>
                        <idea.home.path>${project.build.directory}/idea</idea.home.path>
                        <idea.config.path>${project.build.directory}/idea/config</idea.config.path>
                        <idea.system.path>${project.build.directory}/idea/system</idea.system.path>
                        <cij.idea.expected.version>${idea.version}</cij.idea.expected.version>
                        <java.io.tmpdir>${project.build.directory}/idea/tmp</java.io.tmpdir>
                        <idea.load.plugins.id>org.openclover.idea</idea.load.plugins.id>
                    </systemProperties>
                </configuration>
            </plugin>
            <!-- generate plugin jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/assembly/clover-idea-jar.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- generate sources jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- generate javadoc jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- don't deploy IDEA plugin to maven central -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <idea.version>141.3058.30</idea.version>
    </properties>
</project>