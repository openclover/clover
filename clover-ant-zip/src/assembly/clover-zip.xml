<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>all</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>clover-${project.version}</outputDirectory>
            <includes>
                <include>org.openclover:clover</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>LICENSE.txt</include>
                    <include>licenses/*</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>clover-${project.version}/lib</outputDirectory>
            <includes>
                <include>org.openclover:clover</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/releasenotes</directory>
            <outputDirectory>clover-${project.version}</outputDirectory>
            <includes>
                <include>README.html</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../tutorial</directory>
            <outputDirectory>clover-${project.version}/tutorial</outputDirectory>
            <excludes>
                <exclude>target/*</exclude>
                <exclude>build/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>